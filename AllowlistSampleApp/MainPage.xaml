<Page
    x:Class="AllowlistSampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllowlistSampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Dark">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CaptureElement x:Name='WebcamFeed' Loaded="WebcamFeed_Loaded" Height="500" Width="500" Margin="0,-400,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Click="Button_Click" Content="Check" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" />
        <Button Click="NewUserButton_Click" Content="Add User" Width= "130" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-200,400,0,0" />
        <Button Click="RemoveUserButton_Click" Content="Remove User" Width= "130" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,400,0,0" />
        <TextBlock x:Name="Text" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,300,0,0"/>
    </Grid>
</Page>
